<div class="content narrow">
  <% page_articles.each_with_index do |article, i| %>
    <article class="post">
      <header>
        <time datetime="<%= article.date.to_s %>"><%= article.date.strftime('%b %e, %Y') %></time>
        <h1><%= link_to article.title, article.url.sub('.html', '') %></h1>
      </header>

      <%= article.body %>
    </article>
  <% end %>

  <br /> <br />

  <%= partial :mailing_list %>
</div>
